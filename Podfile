# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'
use_frameworks!

# Pods for ChatDemos
def useful_pods
pod 'Ably'
pod "PubNub", "~> 4"
pod 'RxSwift',    '~> 3.0'
pod 'RxCocoa',    '~> 3.0'
pod 'Firebase'
pod 'Firebase/Database'
pod 'Lightstreamer_iOS_Client', '2.1.2'
end


target 'ChatDemos' do
  useful_pods
end


target 'DemoFirebase' do
  useful_pods
end

